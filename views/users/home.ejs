<%- include('../layouts/header.ejs')%>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .content-container {
        width: 50%;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #333;
    }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #fb0e0e;
    }
</style>

<div class="content-container">
    <h1>User details</h1>

    <table>
        <tr>
            <td>Name</td>
            <td><%= user.name %></td>
        </tr>
        <tr>
            <td>Mobile</td>
            <td><%= user.mobile %></td>
        </tr>
        <tr>
            <td>Verified</td>
            <td>Yes</td>
        </tr>
    </table>

    <br>

    <div>
        <button onclick="location.href='/logout'">Logout</button>
    </div>
</div>

<%- include('../layouts/footer.ejs')%>
